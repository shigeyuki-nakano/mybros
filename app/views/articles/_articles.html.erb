<ul class='list-unstyled'>
    
    <% articles.each do |article| %>
        
        <li class="media mb-3">
            <img class="mr-2 rounded" src="<%= article.title_image %>" alt="タイトルイメージ">
            <div class="media-body">
                <div>
                    <%= link_to article.title, article_path(article) %>
                </div>
                <div>
                    <p class="mb-0">
                        <%= article.article %>
                    </p>
                </div>
                <div>
                    <%= article.created_at %>
                </div>
            </div>
        </li>
        
    <% end %>
    
    <%= paginate articles %>
    
</ul>