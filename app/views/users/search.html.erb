<p class="m-0"><i class="fas fa-search"></i>ユーザー検索</p>
<%= form_tag(search_users_path, method: :get) do %>
    <p class="form_group">
        <%= text_field_tag :search, params[:search], class: 'form-control mb-2' %>
        <%= submit_tag '検索', name: nil, class: 'btn btn-primary btn-block' %>
    </p>
<% end %>

<% if @users.any? %>

    <ul class="list-unstyled">
        
        <% @users.each do |user| %>
        
            <li class="media border-bottom">
                <img class="mr-2 rounded" src="<%= gravatar_url(user, {size: 50 }) %>" alt="アイコン">
                <div class="media-body">
                    <div>
                        <%= user.name %>
                    </div>
                    <div>
                        <p>
                             <%= link_to '詳細を見る', user_path(user) %>
                        </p>
                    </div>
                </div>
            </li>
            
        <% end %>
        
    </ul>
    
    <%= paginate @users %>
    
<% else %>

<p>その名前のユーザーはいませんでした...。</p>
<% end %>